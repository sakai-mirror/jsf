<?xml version="1.0" encoding="UTF-8"?>

<project>
  <pomVersion>3</pomVersion>
  <extend>../../master/project.xml</extend>
  <name>Sakai JSF Widgets - MyFaces RI</name>
  <groupId>sakaiproject</groupId>
  <id>sakai-jsf-widgets-myfaces</id>
  <currentVersion>${sakai.version}</currentVersion>
  <organization>
    <name>University of Michigan</name>
    <url>http://sakaiproject.org/</url>
  </organization>
  <inceptionYear>2003</inceptionYear>
  <description>
	This is the Maven project for the implementation-specific details
	for using Sakai's JSF widgets on MyFaces runtime implementation.
  </description>
  <properties>
    <deploy.type>jar</deploy.type>
  </properties>

  <dependencies>

	<!-- Sakai plugin -->
	<dependency>
		<groupId>sakaiproject</groupId>
		<artifactId>sakai</artifactId>
		<version>${sakai.plugin.version}</version>
		<type>plugin</type>
	</dependency>

    <!-- MyFaces JSF dependencies -->
    <dependency>
      <groupId>myfaces</groupId>
      <artifactId>myfaces-api</artifactId>
      <version>1.1.5</version>
    </dependency>
    <dependency>
      <groupId>myfaces</groupId>
      <artifactId>myfaces-impl</artifactId>
      <version>1.1.5</version>
    </dependency>
    <dependency>
      <groupId>myfaces</groupId>
      <artifactId>tomahawk</artifactId>
      <version>1.1.6</version>
    </dependency>

    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.4</version>
    </dependency>

    <dependency>
      <groupId>jspapi</groupId>
      <artifactId>jsp-api</artifactId>
      <version>2.0</version>
    </dependency>

    <dependency>
		<groupId>commons-logging</groupId>
		<artifactId>commons-logging</artifactId>
		<version>1.0.4</version>
	</dependency>

  </dependencies>

  <build>

    <sourceDirectory>src/java</sourceDirectory>

    <resources>

      <resource>
        <directory>${basedir}/src/bundle</directory>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </resource>

      <!-- Needed to get the widget bundle (localizable text) into the jar from the src directory -->
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </resource>

      <resource>
        <directory>${basedir}/src</directory>
        <includes>
          <include>META-INF/*.tld</include>
          <include>META-INF/*.xml</include>
        </includes>
      </resource>

    </resources>

  </build>

</project>
